<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginRight="2dp"
        android:textStyle="italic"
        android:textSize="10sp"
        android:id="@+id/textView_data_chat"
        android:text="02/10/10 - 12:00"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <ImageView
            android:id="@+id/imageView_foto_chat"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_launcher_background"
            android:layout_width="30dp"
            android:layout_height="30dp"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical">

            <TextView
                android:textStyle="bold"
                android:textSize="14sp"
                android:id="@+id/textView_nome_chat"
                android:text="Raphael Ramos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:textSize="12sp"
                android:id="@+id/textView_mensagem"
                android:text="Oiiii"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>


    </LinearLayout>



</LinearLayout>