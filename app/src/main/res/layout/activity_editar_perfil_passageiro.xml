<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_principal"
        layout="@layout/toolbar_principal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/linear_1"
        android:background="@color/lightPurple"
        android:orientation="vertical">

       <FrameLayout
           android:layout_width="160dp"
           android:layout_height="160dp"
           android:id="@+id/frame_layout"
           android:layout_gravity="center"
           android:layout_marginTop="10dp">

           <de.hdodenhof.circleimageview.CircleImageView
               android:id="@+id/imageView_foto_passsageiro_editar_perfil"
               android:layout_width="160dp"
               android:layout_height="160dp"
               android:layout_gravity="center"
               app:civ_border_color="@android:color/white"
               app:civ_border_width="3dp"
               android:src="@drawable/ic_person">

           </de.hdodenhof.circleimageview.CircleImageView>

           <ImageView
               android:id="@+id/imageView_edit_foto_perfil_passageiro"
               android:layout_width="30dp"
               android:src="@drawable/ic_edit_preto"
               android:layout_height="30dp"
               android:layout_gravity="center">
           </ImageView>

       </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linear2">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView1"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/imageView_nome_editar_perfil"
                android:src="@drawable/ic_person"
                android:background="@color/colorPrimary"
                app:civ_border_width="3dp"
                app:civ_border_color="@color/colorPrimaryDark"
                android:layout_gravity="center_vertical">

            </de.hdodenhof.circleimageview.CircleImageView>

        <EditText
            android:id="@+id/editText_editar_nome_perfil"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Seu Nome"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_gravity="center">
        </EditText>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/cardview_telefone_editar_perfil">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/imageView_editar_telefone"
                android:src="@drawable/ic_phone_white"
                android:background="@color/colorPrimary"
                app:civ_border_width="3dp"
                app:civ_border_color="@color/colorPrimaryDark"
                android:layout_gravity="center_vertical">

            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Telefone"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/textView_telefone_editar_perfil"
                android:layout_gravity="center">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Solicitar Troca"
                android:textStyle="bold"
                android:layout_gravity="bottom"
                android:layout_marginLeft="170dp"
                android:layout_marginBottom="5dp"
                android:textAlignment="center">

            </TextView>

        </androidx.cardview.widget.CardView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton_editar_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:backgroundTint="@color/lightPurple"
            android:layout_marginLeft="260dp"
            android:src="@drawable/ic_check"/>
    </LinearLayout>

</LinearLayout>